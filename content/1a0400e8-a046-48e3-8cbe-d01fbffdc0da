            <mo>⃗<!-- ⃗ --></mo>
          </mover>
        </mrow>
      </mtd>
      <mtd>
        <mo>=</mo>
        <mi>m</mi>
        <mrow class="MJX-TeXAtom-ORD">
          <mover>
            <mi>v</mi>
            <mo>⃗<!-- ⃗ --></mo>
          </mover>
        </mrow>
